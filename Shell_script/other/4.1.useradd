#!/bin/bash
# Author: Nasir
# Date: 29-07-2024 | Modified Date: 29-07-2024
# Description: To add a new user

echo "PLEASE ENTER USERNAME: "
read u
sudo useradd $u
echo
echo "The User $u has been added successfully"
echo
echo "You can check the list of users by running below command:"
echo "cat /etc/passwd"
echo

# Note: 
# eg: Let's say you have added a user with name 'alexa', then run below
# cat /etc/passwd | grep alexa
